<Window x:Class="ImageReviewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ImageReviewer"
        xmlns:converters="clr-namespace:ImageReviewer.Converters"
        mc:Ignorable="d"
        Title="Image Reviewer" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Orange"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:MetadataFormatter x:Key="MetadataFormatter"/>
            <converters:ScaleConverter x:Key="ScaleConverter"/>

            <SolidColorBrush x:Key="SelectedBorderBrush" Color="#FF9800"/>
            <SolidColorBrush x:Key="UnselectedBorderBrush" Color="Transparent"/>
            
            <local:BooleanToBrushConverter x:Key="BooleanToBrushConverter" 
                TrueBrush="{StaticResource SelectedBorderBrush}"
                FalseBrush="{StaticResource UnselectedBorderBrush}"/>

            <Style x:Key="ModernButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
            </Style>

            <Style x:Key="ModernTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="materialDesign:TextFieldAssist.DecorationVisibility" Value="Hidden"/>
                <Setter Property="materialDesign:TextFieldAssist.TextFieldCornerRadius" Value="4"/>
            </Style>

            <Style x:Key="CircularProgressBar" TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignCircularProgressBar}">
                <Setter Property="Width" Value="40"/>
                <Setter Property="Height" Value="40"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#F0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Linke Seite -->
        <Grid Margin="16,16,8,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <!-- Ordnerpfad und Button -->
            <DockPanel Grid.Row="0" Margin="8,8,8,8">
                <Button x:Name="btnSelectFolder" 
                        Content="Ordner wählen" 
                        Click="BtnSelectFolder_Click"
                        Style="{StaticResource ModernButton}"
                        Width="130"
                        DockPanel.Dock="Left"/>

                <TextBox x:Name="txtCurrentPath"
                         Text="{Binding CurrentPath, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="True" 
                         Margin="8,10,0,0"
                         Style="{StaticResource ModernTextBox}"/>
            </DockPanel>

            <!-- Hauptbild -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="4"
                    Margin="8,0,8,8"
                    Effect="{DynamicResource MaterialDesignShadowDepth1}">
                <Grid>
                    <Viewbox x:Name="imageViewbox" 
                            Stretch="Uniform" Margin="8,8,8,8">
                        <Image x:Name="imgMain"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Stretch="Uniform"/>
                    </Viewbox>
                    <Grid x:Name="loadingGrid" Visibility="Collapsed">
                        <Rectangle Fill="#80FFFFFF"/>
                        <ProgressBar Style="{StaticResource CircularProgressBar}"
                                   Value="0"
                                   IsIndeterminate="True"
                                   Width="48"
                                   Height="48"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Sortieroptionen -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        Margin="8,0,8,8">
                <TextBlock Text="Sortierung:" 
                          VerticalAlignment="Center"
                          Margin="0,0,8,0"/>
                <ComboBox x:Name="cbSortOption" 
                         Width="120"
                         Margin="0,0,8,0"
                         SelectionChanged="CbSortOption_SelectionChanged">
                    <ComboBoxItem Content="Name" IsSelected="True"/>
                    <ComboBoxItem Content="Datum"/>
                    <ComboBoxItem Content="Größe"/>
                </ComboBox>
                <ToggleButton x:Name="btnSortDirection"
                            Style="{StaticResource MaterialDesignSwitchToggleButton}"
                            ToolTip="Sortierrichtung umkehren"
                            Checked="BtnSortDirection_Checked"
                            Unchecked="BtnSortDirection_Checked"
                            Margin="0,0,16,0">
                    <materialDesign:PackIcon Kind="SortAscending" x:Name="sortIcon"/>
                </ToggleButton>
                <Button x:Name="btnRotateImage"
                        Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                        Click="BtnRotateImage_Click"
                        ToolTip="Bild um 90° drehen">
                    <materialDesign:PackIcon Kind="RotateRight"/>
                </Button>
            </StackPanel>

            <!-- Filmstreifen -->
            <ListView x:Name="lvFilmstrip"
                     Grid.Row="3"
                     ScrollViewer.HorizontalScrollBarVisibility="Visible"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     SelectionMode="Single"
                     SelectionChanged="LvFilmstrip_SelectionChanged"
                     PreviewKeyDown="MainWindow_PreviewKeyDown"
                     Background="White"
                     BorderThickness="0"
                     Margin="8,0,8,8">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="4">
                            <Border x:Name="imageBorder" 
                                    Width="100" Height="100" 
                                    Background="White"
                                    BorderThickness="2"
                                    BorderBrush="Transparent"
                                    CornerRadius="4"
                                    Margin="0,0,0,0">
                                <Border.ToolTip>
                                    <ToolTip>
                                        <TextBlock Text="{Binding Metadata, Converter={StaticResource MetadataFormatter}}" 
                                                 TextWrapping="Wrap"/>
                                    </ToolTip>
                                </Border.ToolTip>
                                <Image Source="{Binding Thumbnail}"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       MouseEnter="Image_MouseEnter"
                                       MouseLeave="Image_MouseLeave"/>
                            </Border>
                            <TextBlock Text="{Binding FileName}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       MaxWidth="100"/>
                        </StackPanel>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter TargetName="imageBorder" Property="BorderBrush" Value="#FF9800"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                          Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>

        <!-- Rechte Seite -->
        <Grid Grid.Column="1" Margin="8,16,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Ausgewählte Bilder -->
            <Border Background="White" CornerRadius="4"
            Effect="{DynamicResource MaterialDesignShadowDepth1}">
                <ScrollViewer Margin="8" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="selectedImagesControl"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" 
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4">
                                    <Border x:Name="imageBorder" 
                                    Background="#F5F5F5" 
                                    Width="80" Height="80"
                                    CornerRadius="4"
                                    Margin="2"
                                    MouseEnter="Image_MouseEnter"
                                    MouseLeave="Image_MouseLeave">
                                        <Image Source="{Binding Image}" 
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Border>
                                    <Popup x:Name="imagePopup" 
                                   AllowsTransparency="True" 
                                   Placement="Right"
                                   PlacementTarget="{Binding ElementName=imageBorder}"
                                   IsOpen="False">
                                        <Border Background="White" 
                                        BorderBrush="#2196F3" 
                                        BorderThickness="2" 
                                        CornerRadius="4"
                                        Effect="{DynamicResource MaterialDesignShadowDepth2}">
                                            <Image Source="{Binding OriginalImage}" 
                                           MaxHeight="600" 
                                           MaxWidth="800"
                                           Stretch="Uniform"
                                           Margin="4"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Export-Bereich -->
            <Border Grid.Row="1" Background="White" Margin="0,16,0,0" CornerRadius="4"
            Effect="{DynamicResource MaterialDesignShadowDepth1}">
                <StackPanel Margin="16">
                    <TextBlock Text="Zielordner:" 
                       Margin="0,0,0,8"
                       Style="{StaticResource MaterialDesignTextBlock}"/>
                    <DockPanel Margin="0,0,0,16">
                        <Button x:Name="btnSelectExportFolder" 
                        Content="..." 
                        DockPanel.Dock="Right" 
                        Margin="8,0,0,0"
                        Width="40" 
                        Style="{StaticResource ModernButton}"
                        Padding="0"/>
                        <TextBlock x:Name="txtExportPath" 
                         Text="{Binding ExportPath}"
                         Style="{StaticResource MaterialDesignTextBlock}"
                         VerticalAlignment="Center"
                         TextTrimming="CharacterEllipsis"
                         TextWrapping="NoWrap"
                         TextAlignment="Left"
                         Width="Auto"
                         MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=DockPanel}}"
                         ToolTip="{Binding ExportPath}"/>
                    </DockPanel>
                    <Button x:Name="btnExport" 
                    Content="Markierte Bilder exportieren"
                    Style="{StaticResource ModernButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
